{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowFotomandalinUserFullAccess",
      "Effect": "Allow",
      "Principal": {
        "AWS": "arn:aws:iam::668567157984:user/karadenizemirr"
      },
      "Action": [
        "s3:GetObject",
        "s3:PutObject",
        "s3:DeleteObject",
        "s3:ListBucket"
      ],
      "Resource": [
        "arn:aws:s3:eu-north-1:668567157984:accesspoint/accessfotomandalin",
        "arn:aws:s3:eu-north-1:668567157984:accesspoint/accessfotomandalin/object/*"
      ]
    },
    {
      "Sid": "AllowPublicReadAccess",
      "Effect": "Allow",
      "Principal": "*",
      "Action": "s3:GetObject",
      "Resource": "arn:aws:s3:eu-north-1:668567157984:accesspoint/accessfotomandalin/object/uploads/*",
      "Condition": {
        "StringLike": {
          "aws:Referer": [
            "https://fotomandalin.com/*",
            "https://www.fotomandalin.com/*",
            "https://fotomandalin.vercel.app/*",
            "http://localhost:3000/*"
          ]
        }
      }
    }
  ]
}
