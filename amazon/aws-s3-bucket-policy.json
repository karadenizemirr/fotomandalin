{
  "Version": "2012-10-17",
  "Id": "FotomandalinUploadPolicy",
  "Statement": [
    {
      "Sid": "PublicReadForUploads",
      "Effect": "Allow",
      "Principal": "*",
      "Action": [
        "s3:GetObject"
      ],
      "Resource": "arn:aws:s3:::fotomandalin-uploads/uploads/*",
      "Condition": {
        "StringEquals": {
          "aws:Referer": [
            "https://fotomandalin.com/*",
            "https://www.fotomandalin.com/*",
            "https://fotomandalin.vercel.app/*"
          ]
        }
      }
    },
    {
      "Sid": "PublicReadForThumbnails",
      "Effect": "Allow",
      "Principal": "*",
      "Action": [
        "s3:GetObject"
      ],
      "Resource": "arn:aws:s3:::fotomandalin-uploads/uploads/thumbnails/*",
      "Condition": {
        "StringEquals": {
          "aws:Referer": [
            "https://fotomandalin.com/*",
            "https://www.fotomandalin.com/*",
            "https://fotomandalin.vercel.app/*"
          ]
        }
      }
    },
    {
      "Sid": "DenyDirectAccess",
      "Effect": "Deny",
      "Principal": "*",
      "Action": "s3:*",
      "Resource": [
        "arn:aws:s3:::fotomandalin-uploads",
        "arn:aws:s3:::fotomandalin-uploads/*"
      ],
      "Condition": {
        "StringNotEquals": {
          "aws:Referer": [
            "https://fotomandalin.com/*",
            "https://www.fotomandalin.com/*",
            "https://fotomandalin.vercel.app/*"
          ]
        },
        "Bool": {
          "aws:SecureTransport": "false"
        }
      }
    },
    {
      "Sid": "AllowApplicationUpload",
      "Effect": "Allow",
      "Principal": {
        "AWS": "arn:aws:iam::YOUR_ACCOUNT_ID:user/fotomandalin-uploader"
      },
      "Action": [
        "s3:PutObject",
        "s3:PutObjectAcl",
        "s3:DeleteObject"
      ],
      "Resource": "arn:aws:s3:::fotomandalin-uploads/uploads/*",
      "Condition": {
        "StringEquals": {
          "s3:x-amz-server-side-encryption": "AES256"
        },
        "NumericLessThan": {
          "s3:content-length": 10485760
        }
      }
    },
    {
      "Sid": "DenyInsecureConnections",
      "Effect": "Deny",
      "Principal": "*",
      "Action": "s3:*",
      "Resource": [
        "arn:aws:s3:::fotomandalin-uploads",
        "arn:aws:s3:::fotomandalin-uploads/*"
      ],
      "Condition": {
        "Bool": {
          "aws:SecureTransport": "false"
        }
      }
    },
    {
      "Sid": "RestrictFileTypes",
      "Effect": "Deny",
      "Principal": "*",
      "Action": "s3:PutObject",
      "Resource": "arn:aws:s3:::fotomandalin-uploads/uploads/*",
      "Condition": {
        "StringNotLike": {
          "s3:x-amz-content-type": [
            "image/jpeg",
            "image/png",
            "image/webp",
            "image/gif",
            "video/mp4",
            "video/quicktime",
            "application/pdf"
          ]
        }
      }
    }
  ]
}

